<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.randatic.collegeapp" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_menu_graduate"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Presenter.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".Presenter.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Presenter.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Presenter.CreateAccountActivity"
            android:parentActivityName=".Presenter.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Presenter.ForgotAccountActivity"
            android:parentActivityName=".Presenter.LoginActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>